{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "pretty": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ]
}